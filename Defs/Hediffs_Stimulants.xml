<?xml version="1.0" encoding="UTF-8"?>
<Defs>
    <HediffDef ParentName="DiseaseBase">
        <defName>OmegaStimulant</defName>
        <label>omegaStimulant</label>
        <description>Omega stimulant in the bloodstream. Despite granting a huge strength, endurance and consciousness buffs at first, it soon backfires with extreme pain, delirium and, at the end, brain hemorrhage and, therefore, death.</description>
        <lethalSeverity>1</lethalSeverity>
        <comps>
            <li Class="HediffCompProperties_SeverityPerDay">
                <severityPerDay>2.5</severityPerDay>
            </li>
        </comps>
        <stages>
            <li>
                <label>warmup</label>
                <painFactor>0.75</painFactor>
                <statOffsets>
                    <IncomingDamageFactor>-0.2</IncomingDamageFactor>
                    <MeleeDPS>0.3</MeleeDPS>
                    <MeleeHitChance>0.3</MeleeHitChance>
                    <ShootingAccuracyPawn>0.25</ShootingAccuracyPawn>
					<MeleeDodgeChance>0.3</MeleeDodgeChance>
                </statOffsets>
                <capMods>
                    <li>
                        <capacity>Manipulation</capacity>
                        <offset>0.8</offset>
                    </li>
                    <li>
                        <capacity>Consciousness</capacity>
                        <offset>0.3</offset>
                    </li>
                    <li>
                        <capacity>Moving</capacity>
                        <offset>0.4</offset>
                    </li>
                </capMods>
            </li>
            <li>
                <minSeverity>0.15</minSeverity>
                <label>peak</label>
                <painFactor>0.2</painFactor>
                <statOffsets>
                    <IncomingDamageFactor>-0.5</IncomingDamageFactor>
                    <MeleeDPS>0.8</MeleeDPS>
                    <MeleeHitChance>0.8</MeleeHitChance>
                    <ShootingAccuracyPawn>0.8</ShootingAccuracyPawn>
					<MeleeDodgeChance>0.6</MeleeDodgeChance>
                </statOffsets>
                <capMods>
                    <li>
                        <capacity>Manipulation</capacity>
                        <offset>1.5</offset>
                    </li>
                    <li>
                        <capacity>Consciousness</capacity>
                        <offset>0.6</offset>
                    </li>
                    <li>
                        <capacity>Moving</capacity>
                        <offset>0.8</offset>
                    </li>
                </capMods>
            </li>
            <li>
                <minSeverity>0.4</minSeverity>
                <label>decline</label>
                <painFactor>0.8</painFactor>
                <painOffset>0.2</painOffset>
                <statOffsets>
                    <IncomingDamageFactor>-0.1</IncomingDamageFactor>
                    <MeleeHitChance>-0.1</MeleeHitChance>
                    <MeleeDPS>0.2</MeleeDPS>
                    <ShootingAccuracyPawn>-0.2</ShootingAccuracyPawn>
					<MeleeDodgeChance>-0.1</MeleeDodgeChance>
                </statOffsets>
                <capMods>
                    <li>
                        <capacity>Manipulation</capacity>
                        <offset>0.6</offset>
                    </li>
                    <li>
                        <capacity>Consciousness</capacity>
                        <offset>0.1</offset>
                    </li>
                    <li>
                        <capacity>Moving</capacity>
                        <offset>0.3</offset>
                    </li>
                </capMods>
            </li>
            <li>
                <minSeverity>0.7</minSeverity>
                <label>reckoning</label>
                <painOffset>0.4</painOffset>
                <capMods>
                    <li>
                        <capacity>Consciousness</capacity>
                        <offset>-0.25</offset>
                        <setMax>0.75</setMax>
                    </li>
                    <li>
                        <capacity>Moving</capacity>
                        <offset>-0.2</offset>
                    </li>
                    <li>
                        <capacity>Breathing</capacity>
                        <offset>-0.2</offset>
                    </li>
                    <li>
                        <capacity>BloodFiltration</capacity>
                        <offset>-0.2</offset>
                    </li>
                </capMods>
            </li>
            <li>
                <minSeverity>0.9</minSeverity>
                <label>terminal</label>
                <painOffset>1.0</painOffset>
                <capMods>
                    <li>
                        <capacity>Consciousness</capacity>
                        <setMax>0.1</setMax>
                    </li>
                    <li>
                        <capacity>Breathing</capacity>
                        <offset>-0.75</offset>
                    </li>
                    <li>
                        <capacity>BloodFiltration</capacity>
                        <offset>-0.5</offset>
                    </li>
                </capMods>
            </li>
        </stages>
    </HediffDef>
</Defs>
